<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quadro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        tools:text="ALWAYS BE HAPPY" />

    <ImageView
        android:id="@+id/main_quadro_image"
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/quadro_image0"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/quadro_image0_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/quadro_image0"
                android:layout_alignBottom="@id/quadro_image0"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/quadro_image1"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/quadro_image1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/quadro_image1"
                android:layout_alignBottom="@id/quadro_image1"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/quadro_image2"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/quadro_image2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/quadro_image2"
                android:layout_alignBottom="@id/quadro_image2"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/quadro_image3"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/quadro_image3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/quadro_image3"
                android:layout_alignBottom="@id/quadro_image3"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>