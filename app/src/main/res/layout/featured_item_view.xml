<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/featured_image0"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/featured_image0_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/featured_image0"
                android:layout_alignBottom="@id/featured_image0"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/featured_image1"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/featured_image1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/featured_image1"
                android:layout_alignBottom="@id/featured_image1"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/featured_image2"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/featured_image2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/featured_image2"
                android:layout_alignBottom="@id/featured_image2"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/featured_image3"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/featured_image3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/featured_image3"
                android:layout_alignBottom="@id/featured_image3"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:textColor="@color/black" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>